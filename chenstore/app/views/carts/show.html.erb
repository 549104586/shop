<div class="row">

  <div class="col-lg-12 col-md-12">

    <h2>购物车</h2>
    <table class=" table table-bordered">
      <thead>

      </thead>
      <tr>
        <td>
          <input type="checkbox">

        </td>
        <td class="col-lg-3 col-md-2 col-sm-3" style="text-align: center">
          商品资讯
        </td>
        <td class="col-lg-2 col-md-2 col-sm-3" style="text-align: center">
          商品名
        </td>

        <td class="col-lg-3 col-md-2 col-sm-3" style="text-align: center">
          描述
        </td>

        <td class="col-lg-3 col-md-2 col-sm-3" style="text-align: center">
          价格
        </td>
        <td class=" col-lg-3 col-md-2 col-sm-3" style="text-align: center">
          数量
        </td>
      </tr>



      <tbody>
      <tr>
        <% current_cart.cart_items.each do |cart_item| %>

            <td>
              <%= link_to product_path(cart_item.product) do %>
                  <% if cart_item.product.image.persent? %>

                      <%= image_tag(cart_item.product.url, class: "thumbnail") %>

                  <% else %>

                      <%= image_tag("http://placholder.it/400*400&text=No Pic", class: "thumbnail") %>


                  <% end %>

              <% end %>
            </td>


            <td>
              <%= link_to(cart_item.product.title, product_path(cart_item.product)) %>
            </td>

            <td>
              <%= cart_item.product.description %>
            </td>

            <td>
              <%= cart_item.product.price %>
            </td>

            <td>
              <%= cart_item.product.quantity %>
            </td>

        <% end %>
      </tr>


      </tbody>
    </table>


    <div class="total clearfix">
      <span class="pull-right">
        <span>总计<%= current_cart.total_price %>RMB</span>

      </span>
    </div>

    <div class="checkbox clearfix">

      <%= link_to("确认结账","#",method: :post,class:"btn btn-lg btn-danger pull-right")%>
    </div>

  </div>

</div>
